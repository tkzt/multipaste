{
  "productName": "multipaste",
  "version": "0.0.1",
  "identifier": "com.tkzt.multipaste",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Multipaste",
        "label": "main",
        "url": "/",
        "fullscreen": false,
        "resizable": false,
        "width": 400,
        "minHeight": 400,
        "transparent": true,
        "decorations": false,
        "visible": false
      },
      {
        "title": "Settings",
        "label": "settings",
        "url": "/settings",
        "fullscreen": false,
        "resizable": false,
        "width": 180,
        "height": 165,
        "transparent": true,
        "decorations": false,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "assets"
        ]
      }
    },
    "macOSPrivateApi": true,
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "id": "multipaste-tray"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

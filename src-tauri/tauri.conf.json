{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "multipaste",
    "version": "0.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "startDragging": true,
        "hide": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$APPDATA/assets/*"
        ]
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tkzt.multipaste",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "windows": [
      {
        "label": "main",
        "url": "/",
        "fullscreen": false,
        "resizable": false,
        "width": 400,
        "minHeight": 400,
        "transparent": true,
        "decorations": false,
        "visible": false
      },
      {
        "label": "settings",
        "url": "/settings",
        "fullscreen": false,
        "resizable": false,
        "width": 200,
        "height": 120,
        "transparent": true,
        "decorations": false,
        "visible": false
      }
    ],
    "macOSPrivateApi": true
  }
}
